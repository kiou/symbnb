{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">

        <h1 class="my-5">Gestion des annonces</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th class="text-center">RÃ©servations</th>
                    <th class="text-center">Note</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
               
                {% for ad in ads %}
                    <tr>
                        <td>{{ad.id}}</td>
                        <td>{{ad.title}}</td>
                        <td>{{ad.author.firstName}} {{ad.author.lastName}}</td>
                        <td class="text-center">{{ad.bookings|length}}</td>
                        <td class="text-center">{{ad.avgRatings | number_format(1,',', ' ')}}</td>
                        <td>
                            <a href="{{ path('admin_ads_edit',{'id':ad.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_ads_delete',{'id':ad.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                
            </tbody>
        </table>

    </div>
{% endblock %}
