{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un commentaire{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification du commentaire {{comment.id}}</h1>

        <div class="alert alert-info">
            <strong>Annonce liée:</strong> {{comment.ad.title}}<br>
            <strong>Auteur:</strong> {{comment.author.firstName}} {{comment.author.lastName}}<br>
            <strong>Date de création:</strong> {{comment.createdAt|date("d/m/Y à H:i ")}}<br>
            <strong>Note:</strong> {{comment.rating}}
        </div>

        {{ form_start(form) }}

        {{ form_label(form.content, "Commentaire") }}
        {{ form_widget(form.content) }}
        
        <br>

        {{ form_widget(form) }}

        {{ form_end(form) }}

    </div>

{% endblock %}
