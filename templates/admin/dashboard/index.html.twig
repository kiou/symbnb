{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">

            <div class="col">
                <div class="card bg-primary text-white my-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.users}} utilisateurs</h4>
                            </div>           
                        </div>          
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-white my-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.ads}} annonces postés</h4>
                            </div>           
                        </div>          
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white my-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.bookings}} réservations</h4>
                            </div>           
                        </div>          
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white my-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{stats.comments}} avis</h4>
                            </div>           
                        </div>          
                    </div>
                </div>
            </div>

        </div>
        <hr>
        <dib class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3">les annonces populaires</h2>

                    <table class="table table-hover text-white">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>{{ad.firstName}} {{ad.lastName}}</td>
                                    <td>{{ad.note |number_format(1,',', ' ')}}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3">les pires annonces</h2>

                    <table class="table table-hover text-white">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>{{ad.firstName}} {{ad.lastName}}</td>
                                    <td>{{ad.note |number_format(1,',', ' ')}}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
